<library path="lib/libvigir_footstep_planning_rviz_plugin">
  <class name="footstep_planning_rviz_plugin/StepPlan"
         type="vigir_footstep_planning_rviz_plugin::StepPlanDisplay"
         base_class_type="rviz::Display">
    <description>
      Create and display Step Plans. 
    </description>
  </class>
  <class name="footstep_planning_rviz_plugin/PlantFeet"
         type="vigir_footstep_planning_rviz_plugin::PlantFeetTool"
         base_class_type="rviz::Tool">
    <description>
      Position a pair of feet on the ground plane.
    </description>
  </class>
  <class name="footstep_planning_rviz_plugin/PropertyWidget"
	 type="vigir_footstep_planning_rviz_plugin::StepProperty"
	 base_class_type="rviz::StatusProperty" >
    <description>
      Lists properties of current step plan.
    </description>
  </class>
</library>
